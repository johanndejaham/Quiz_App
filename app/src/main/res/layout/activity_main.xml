<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brownHard"
    tools:context=".controler.MainActivity">

    <TextView
        android:id="@+id/BasmalaTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:padding="8dp"
        android:text="بسم الله الرحمن الرحيم"
        android:textColor="#F7F2E7"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.284" />



    <TextView
        android:id="@+id/WelcomeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BasmalaTxt"
        android:textColor="#F7F2E7"
        android:fontFamily="serif"
        android:text="Bienvenue sur Tawhid Quiz"
        android:textStyle="normal"
        android:textSize="26sp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"/>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/letsGoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="16dp"
        android:backgroundTint="#E0ECE4"
        android:layout_margin="16dp"
        android:text="Démarrer le quiz"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
